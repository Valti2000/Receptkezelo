@page
@model Recept.Pages.Update.EditRolesModel

<table>
    <thead>
        <tr>
            <th>Felhasználó neve</th>
            <th>Felhasználó szerepköre</th>
            <th>Módosítás</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Users.Count; i++)
        {
            var user = Model.Users[i];
            <tr>
                <td>@user.UserName</td>
                <td>@user.Role</td>
                <td>
                    <!-- Űrlap a szerepkör módosításához -->
                    <form method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <label asp-for="@Model.Users[i].Role">Válassza ki a szerepkört:</label>
                        <select name="selectedRole" asp-items="Model.AvailableRoles"></select>
                        <input type="submit" value="Mentés" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
